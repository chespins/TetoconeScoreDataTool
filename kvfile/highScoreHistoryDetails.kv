#:kivy 2.1.0

<HighScoreHistoryDetailsScreen>:
    highScoreHistoryRv: highScoreHistoryRv
    rankHistoryRv: rankHistoryRv
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.05
            Label:
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint_x: 0.7
                id: musicName
            Label:
                size_hint_x: 0.3
                id: levelName
        BoxLayout:
            size_hint_y: 0.9
            BoxLayout:
                size_hint_x: 0.7
                canvas:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                orientation: 'vertical'
                RecycleView:
                    size_hint_y: 0.9
                    id: highScoreHistoryRv
                    scroll_type: ['bars', 'content']
                    scroll_wheel_distance: dp(56)
                    bar_width: dp(40)
                    viewclass: 'highScoreHistory'
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: dp(2)
            BoxLayout:
                orientation:'vertical'
                size_hint_x: 0.3
                BoxLayout:
                    size_hint_y: 0.1
                    Label:
                        text: 'ランク'
                    Label:
                        text: '達成回数'
                BoxLayout:
                    size_hint_y: 0.9
                    canvas:
                        Color:
                            rgba: 0, 0, 0, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: 'vertical'
                    RecycleView:
                        size_hint_y: 0.9
                        id: rankHistoryRv
                        viewclass: 'rankHistory'
                        RecycleBoxLayout:
                            default_size: None, dp(35)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            spacing: dp(2)
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: '戻る'
                font_size: 18
                on_release: 
                    root.resetScreen()
                    root.manager.current = 'details'

<highScoreHistory>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                size_hint_x: 0.15
                text: "モード"
            Label:
                size_hint_x: 0.25
                text: root.mode
            Label:
                size_hint_x: 0.15
                text:"更新日時"
            Label:
                size_hint_x: 0.45
                text: root.updateTime
        BoxLayout:
            Label:
                text: "ハイスコア"
            Label:
                text: root.highScore
            Label:
                text: "最大コンボ"
            Label:
                text: root.maxCombo

<rankHistory>:
    canvas.before:
        Color:
            rgba: 0.75, 0, 0.75, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        Label:
            text: root.rank
        Label:
            text: root.count
