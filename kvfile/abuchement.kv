#:kivy 2.1.0

<AbuchmentScreen>:
    abuchmentRv: abuchmentRv
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.8
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: 0.1
                    Label:
                        size_hint_x: 0.5
                        text: "曲名"
                    Label:
                        size_hint_x: 0.2
                        text: "難易度"
                    Label:
                        size_hint_x: 0.15
                        text: "フルコンボ"
                    Label:
                        size_hint_x: 0.15
                        text: "パーフェクト"
                BoxLayout:
                    canvas:
                        Color:
                            rgba: 0.85, 0.85, 0.85, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: 'vertical'
                    RecycleView:
                        size_hint_y: 0.9
                        id: abuchmentRv
                        scroll_type: ['bars', 'content']
                        scroll_wheel_distance: dp(56)
                        bar_width: dp(10)
                        viewclass: 'AbuchmentData'
                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            spacing: dp(2)
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2
            BoxLayout:
                Label:
                    text: "表示する実績"
                    font_size: 18
                    size_hint_x: 0.25
                Spinner:
                    id: abuchmentSpinner
                    font_size: 18
                    size_hint_x: 0.25
                Label:
                    text: "未達成の楽曲を表示する"
                    font_size: 18
                    size_hint_x: 0.3
                BoxLayout:
                    size_hint_x: 0.2
                    CheckBox:
                        active: root.ungetFlg
                        on_press: root.checkboxCheck(self)
            BoxLayout:
                Label:
                    text: "難易度"
                    font_size: 18
                Spinner:
                    id: LevelSpinnerId
                    font_size: 18
                    pos_hint: {'center_x': .5, 'center_y': .5}
                Button:
                    id: buttonSerchMusic
                    text: "表示"
                    font_size: 18
                    on_release: root.serchMusic()
                Button:
                    text: '戻る'
                    font_size: 18
                    on_release:
                        root.resetData() 
                        root.manager.current = 'menu'

<AbuchmentData>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint_x: 0.5
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.musicName
    Label:
        size_hint_x: 0.2
        text: root.levelName
    Label:
        size_hint_x: 0.15
        text: root.fullComboCount
    Label:
        size_hint_x: 0.15
        text: root.perfectCount
