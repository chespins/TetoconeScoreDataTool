#:kivy 2.1.0

<HighScoreSelectScreen>:
    musicRv: musicRv
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.8
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    Label:
                        size_hint_x: 0.1
                        text: "詳細"
                    Label:
                        size_hint_x: 0.4
                        text: "曲名"
                    Label:
                        size_hint_x: 0.2
                        text: "難易度"
                    Label:
                        size_hint_x: 0.1
                        text: "プレイ回数"
                    Label:
                        size_hint_x: 0.2
                        text: "ハイスコア"
                BoxLayout:
                    canvas:
                        Color:
                            rgba: 0.85, 0.85, 0.85, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: 'vertical'
                    RecycleView:
                        size_hint_y: 0.9
                        id: musicRv
                        scroll_type: ['bars', 'content']
                        scroll_wheel_distance: dp(56)
                        bar_width: dp(10)
                        viewclass: 'SearchHighScore'
                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            spacing: dp(2)
        BoxLayout:
            orientation: 'vertical'
            height: dp(100)
            size_hint_y: None
            BoxLayout:
                TextInput:
                    id: searchMusicName
                    size_hint: 0.5, 1
                    line_height: 1
                    multiline: False
                    font_size: 18
                    hint_text: '楽曲名(部分一致)'
                    text_type: "text"
                Label:
                    size_hint_x: 0.35
                    text: "未プレイ楽曲を表示する"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.15
                    CheckBox:
                        active: root.unplayedFlg
                        on_press: root.checkboxCheck(self)
            BoxLayout:
                Label:
                    text: "難易度"
                    font_size: 18
                    size_hint_x: 0.25
                Spinner:
                    id: LevelSpinnerId
                    font_size: 18
                    size_hint_x: 0.25
                Label:
                    text: "ジャンル"
                    font_size: 18
                    size_hint_x: 0.25
                Spinner:
                    id: genreSpinnerId
                    font_size: 18
                    size_hint_x: 0.25
            BoxLayout:
                Button:
                    id: buttonSearchMusic
                    size_hint_x: 0.3
                    text: "検索"
                    font_size: 18
                    on_release: root.searchMusic()
                Button:
                    id: buttonAllMusic
                    size_hint_x: 0.3
                    text: "全曲表示"
                    font_size: 18
                    on_release: root.allMusic()
                Button:
                    size_hint_x: 0.3
                    text: '戻る'
                    font_size: 18
                    on_release:
                        root.resetData() 
                        root.manager.current = 'menu'

<SearchHighScore>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        size_hint_x: 0.1
        on_release: 
            app.showHighScore(root.chartId)
        text: "詳細"
    Label:
        size_hint_x: 0.4
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.musicName
    Label:
        size_hint_x: 0.2
        text: root.levelName
    Label:
        size_hint_x: 0.1
        text: root.playCount
    Label:
        size_hint_x: 0.2
        text: root.highScore
