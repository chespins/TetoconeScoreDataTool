#:kivy 2.1.0

<LicenseScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.9
            ScrollView:
                size_hint_y: 200
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    Label:
                        text: "フォントデータ"
                        font_size: 18
                        size_hint_y: None
                    LicenseLabel:
                        id: Font
                        size_hint: (1, None)
                        height: self.texture_size[1]
                    Label:
                        text: ""
                        font_size: 18
                        size_hint_y: None
                    Label:
                        text: "kivy"
                        font_size: 18
                        size_hint_y: None
                    LicenseLabel:
                        id: kivylicense
                        size_hint: (1, None)
                        height: self.texture_size[1]
                    Label:
                        text: ""
                        font_size: 18
                        size_hint_y: None
                    Label:
                        text: "requests"
                        font_size: 18
                        size_hint_y: None
                    LicenseLabel:
                        id: requests
                        size_hint: (1, None)
                        height: self.texture_size[1]
                    Label:
                        text: ""
                        font_size: 18
                        size_hint_y: None
        Button:
            text: '戻る'
            font_size: 18
            pos_hint: {"y":0}
            height: dp(40)
            size_hint: 1,None
            on_release:
                root.manager.current = 'menu'

<LicenseLabel@Label>:
    text_size: self.width, None
    font_size: 12
    valign: 'middle'
    halign: 'left'
