#:kivy 2.1.0
<OutPutCsvFile>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "データ出力"
                font_size: 22
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.7
            Label:
                id: message
                font_size: 18
                size_hint: (1, None)
                height: self.texture_size[1]
                halign: 'left'
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "取得ランクをCSVファイルに含める"
                size_hint_x: 0.35
            BoxLayout:
                size_hint_x: 0.15
                CheckBox:
                    id: checkRankDisplayed
                    active: root.rankDisplayedFlg
                    on_press: root.rankDisplayedFlgCheck(self)
            Label:
                text: "プレイモード別に出力する"
                size_hint_x: 0.35
            BoxLayout:
                size_hint_x: 0.15
                CheckBox:
                    id: checkPlayMode
                    active: root.playModeFlg
                    on_press: root.playModeFlgCheck(self)
        BoxLayout:
            height: dp(10)
            size_hint: 1,None
        BoxLayout:
            height: dp(30)
            size_hint: 1,None
            Label:
                text: "保存先フォルダ:"
                size_hint_x: 0.3
                font_size: 18
            Button:
                id: saveFolder
                size_hint_x: 0.7
                font_size: 18
                on_release: root.bottonSelectOutputFileName()
        BoxLayout:
            height: dp(10)
            size_hint: 1,None
        BoxLayout:
            height: dp(30)
            size_hint: 1,None
            Label:
                text: "ファイル名"
                size_hint_x: 0.3
                font_size: 18
            TextInput:
                id: fileName
                size_hint: None,1
                width: dp(320)
                line_height: 1
                size_hint_x: 0.7
                multiline: False
                font_size: 18
                hint_text: "ファイル名"
        BoxLayout:
            height: dp(40)
            size_hint: 1,None
            Button:
                id: buttonLogin
                text: "CSV出力"
                font_size: 18
                on_release: root.bottonCsvOutput()
            Button:
                id: buttonBack
                text: '戻る'
                font_size: 18
                on_release: root.manager.current = 'menu'
