#:kivy 2.1.0

<characterDataScreen>:
    characterNameListRv: characterNameListRv
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            canvas:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(30)
            Label:
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                id: characterName
        BoxLayout:
            BoxLayout:
                orientation: "vertical"
                canvas.before:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    size_hint_y: 0.2
                    CharBlackLabel:
                        text: '親愛ランク'
                    CharBlackLabel:
                        id: dearnessRank
                    CharBlackLabel:
                        text: '親愛ポイント'
                    CharBlackLabel:
                        id: dearnessPoint
                BoxLayout:
                    size_hint_y: 0.4
                    CharBlackLabel:
                        size_hint_X: 0.1
                        text: 'キャラクター説明'
                    CharBlackLabel:
                        size_hint_X: 0.9
                        id: introduction
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                BoxLayout:
                    size_hint_y: 0.2
                    CharBlackLabel:
                        size_hint_x: 0.4
                        text: '最終プレイ日時'
                    CharBlackLabel:
                        size_hint_x: 0.6
                        id: lastPlayDate
            BoxLayout:
                orientation:'vertical'
                size_hint_x: 0.3
                canvas:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    height: dp(30)
                    size_hint_y: None
                    Label:
                        size_hint_x: 0.3
                        text: '詳細'
                    Label:
                        size_hint_x: 0.7
                        text: 'キャラクター名'
                BoxLayout:
                    canvas:
                        Color:
                            rgba: 0, 0, 0, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: 'vertical'
                    RecycleView:
                        id: characterNameListRv
                        size_hint_y: 0.9
                        viewclass: 'CharacterName'
                        RecycleBoxLayout:
                            default_size: None, dp(30)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            spacing: dp(2)
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            orientation: "vertical"
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                Button:
                    text: '戻る'
                    font_size: 18
                    on_release: 
                        root.manager.current = 'menu'

<CharBlackLabel@Label>:
    color: [0, 0, 0, 1]
    font_size: 16

<CharacterName>:
    canvas.before:
        Color:
            rgba: 0.75, 0, 0.75, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        Button:
            size_hint_x: 0.3
            on_release: 
                root.setCharacterInfo(root.characterId)
            text: "詳細"
        Label:
            size_hint_x: 0.7
            text: root.characterName
