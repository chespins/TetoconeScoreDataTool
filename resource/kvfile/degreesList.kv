#:kivy 2.1.0

<DegreesList>:
    degreesRv: degreesRv
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.8
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    Label:
                        size_hint_x: 0.25
                        text: "称号名"
                    Label:
                        size_hint_x: 0.1
                        text: "カテゴリ"
                    Label:
                        size_hint_x: 0.45
                        text: "取得条件"
                    Label:
                        size_hint_x: 0.2
                        text: "取得日"
                BoxLayout:
                    canvas:
                        Color:
                            rgba: 0.85, 0.85, 0.85, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: 'vertical'
                    RecycleView:
                        size_hint_y: 0.9
                        id: degreesRv
                        scroll_type: ['bars', 'content']
                        scroll_wheel_distance: dp(56)
                        bar_width: dp(10)
                        viewclass: 'Degrees'
                        RecycleBoxLayout:
                            default_size: None, dp(56)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
                            spacing: dp(2)
        BoxLayout:
            orientation: 'vertical'
            height: dp(67)
            size_hint_y: None
            BoxLayout:
                Label:
                    text: "カテゴリ"
                    font_size: 18
                    size_hint_x: 0.25
                Spinner:
                    id: categorySpinnerId
                    font_size: 18
                    size_hint_x: 0.25
                TextInput:
                    id: searchMissionLabel
                    size_hint: 0.5, 1
                    line_height: 1
                    multiline: False
                    font_size: 18
                    hint_text: '条件(部分一致)'
                    text_type: "text"
            BoxLayout:
                Button:
                    id: buttonSearchMusic
                    size_hint_x: 0.3
                    text: "検索"
                    font_size: 18
                    on_release: root.searchDegrees()
                Button:
                    id: buttonAllMusic
                    size_hint_x: 0.3
                    text: "全称号表示"
                    font_size: 18
                    on_release: root.allDegrees()
                Button:
                    size_hint_x: 0.3
                    text: '戻る'
                    font_size: 18
                    on_release:
                        root.manager.current = 'menu'

<Degrees>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint_x: 0.25
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.degreesName
    Label:
        size_hint_x: 0.1
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.categoryName
    Label:
        size_hint_x: 0.45
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.missionLabel
    Label:
        size_hint_x: 0.2
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        text: root.getDate
