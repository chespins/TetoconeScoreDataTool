#:kivy 2.1.0

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        Label:
            size_hint_y: 0.3
            id: meue_title
            font_size: 24
            text: 'テトコネスコア確認ツール'
            color: [0, 1, 0 , 1 ]
        BoxLayout:
            size_hint_y: 0.7
            padding: 20, 30, 20, 10
            orientation: 'vertical'
            BoxLayout:
                Button:
                    id: webData
                    text: "マイページからデータ取得"
                    font_size: 22
                    on_release: 
                        root.switchingWebData()
            BoxLayout:
                Button:
                    text: "ハイスコア確認"
                    font_size: 22
                    on_release: 
                        root.switchingHighScoreSelect()
                Button:
                    id: rankingCheck
                    text: "ランキング確認"
                    font_size: 22
                    on_release: 
                        root.switchingRankingList()
                Button:
                    text: "達成状況確認"
                    font_size: 22
                    on_release: 
                        root.switchingAbuchment()
            BoxLayout:
                Button:
                    id: degreesList
                    text: "称号確認"
                    font_size: 22
                    on_release: 
                        root.switchingDegreesList()
                Button:
                    id: characterData
                    text: "キャラクター情報確認"
                    font_size: 22
                    on_release: 
                        root.switchingCharacterData()
            BoxLayout:
                Button:
                    id: csvOutput
                    text: "スコア出力"
                    font_size: 22
                    on_release: 
                        root.switchingOutputCsvFile()
                Button:
                    text: "ライセンス"
                    font_size: 22
                    on_release: 
                        root.switchingLicense()
                Button:
                    text: "ツール終了"
                    font_size: 22
                    on_release: app.stop()
