#:kivy 2.1.0

<InputWebPageParamsScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.3
            orientation: 'vertical'
            Label:
                font_size: 18
                text: "テトテコネクトマイページから情報取得"
            Label:
                font_size: 18
                text: "マイページのログインに必要な情報を入力してください。"
            Label:
                id: loginStatusMessage
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                font_size: 18
        BoxLayout:
            size_hint_y: 0.05
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'vertical'
            BoxLayout:
                height: dp(35)
                size_hint: 1,None
                Label:
                    size_hint: 0.5,1
                    font_size: 18
                    text: "アクセスコード/SERIAL No."
                BoxLayout:
                    size_hint: 0.5,1
                    TextInput:
                        id: serialNo
                        size_hint: None,1
                        width: dp(320)
                        line_height: 1
                        multiline: False
                        font_size: 18
                        hint_text: "SERIAL No."
            BoxLayout:
                height: dp(35)
                size_hint: 1,None
                Label:
                    size_hint: 0.5,1
                    font_size: 18
                    text: "NESiCA.netパスワード"
                BoxLayout:
                    size_hint: 0.5,1
                    TextInput:
                        id: password
                        size_hint: None,1
                        width: dp(320)
                        line_height: 1
                        font_size: 18
                        password: True
                        multiline: False
                        hint_text: "パスワード"
            Label:
                text: ""
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: "取得対象選択"
                font_size: 18  
        BoxLayout:
            size_hint_y: 0.3
            orientation: 'vertical'
            BoxLayout:
                Label:
                    size_hint_x: 0.2
                    text: "スコアデータ"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxScore
                        active: root.scoreGetFlg
                        on_press: root.scoreGetFlgCheck(self)
                Label:
                    size_hint_x: 0.2
                    text: "称号"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxDegrees
                        active: root.degreesGetFlg
                        on_press: root.degreesGetFlgCheck(self)
                BoxLayout:
                    size_hint_x: 0.5
            BoxLayout:
                Label:
                    size_hint_x: 0.2
                    text: "ランキングデータ"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxranking
                        active: root.rankingGetFlg
                        on_press: root.rankingGetFlgCheck(self)
                BoxLayout:
                    size_hint_x: 0.75
            BoxLayout:
                BoxLayout:
                    size_hint_x: 0.25
                Label:
                    size_hint_x: 0.2
                    text: "STANDARD"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxStandard
                        active: root.standardGetFlg
                        on_press: root.standardGetFlgCheck(self)
                Label:
                    size_hint_x: 0.2
                    text: "EXPERT"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxExpert
                        active: root.expertGetFlg
                        on_press: root.expertGetFlgCheck(self)
                Label:
                    size_hint_x: 0.2
                    text: "ULTIMATE"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxUltimate
                        active: root.ultimateGetFlg
                        on_press: root.ultimateGetFlgCheck(self)
            BoxLayout:
                BoxLayout:
                    size_hint_x: 0.25
                Label:
                    size_hint_x: 0.2
                    text: "MANIAC"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxManiac
                        active: root.maniacGetFlg
                        on_press: root.maniacGetFlgCheck(self)
                Label:
                    size_hint_x: 0.2
                    text: "CONNECT"
                    font_size: 18
                BoxLayout:
                    size_hint_x: 0.05
                    CheckBox:
                        id: checkBoxConnect
                        active: root.connectGetFlg
                        on_press: root.connectGetFlgCheck(self)
                BoxLayout:
                    size_hint_x: 0.25
        BoxLayout:
            size_hint_y: 0.05
        BoxLayout:
            height: dp(80)
            size_hint: 1,None
            orientation: 'vertical'
            Button:
                id: buttonLogin
                text: "ログイン"
                font_size: 18
                on_release: root.bottonLoginMyPage()
            Button:
                id: buttonBack
                text: '戻る'
                font_size: 18
                on_release: root.manager.current = 'menu'
